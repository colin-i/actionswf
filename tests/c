
smart_diff () {
	diff ${1} ${2}
	if [ $? = 0 ]; then return 0; fi
	a=`stat --printf="%s" ${1}`
	b=`stat --printf="%s" ${2}`
	base64 ${1}
	base64 ${2}
	if [ ${a} = ${b} ]; then
		echo size equal ${a}
		xxd ${1} > 1
		xxd ${2} > 2
		diff 1 2
		rm 1 2
	fi
	return 1
}
if [ -z "${1}" ]; then
	rm -f a.o a.out a.swf a.swf.log a.swf.x libactionswf.so
	if [ -e .expected/a.swf.txt ]; then rm .expected/a.swf.txt; fi
	if [ -e .expected/a.swf.x ]; then rm .expected/a.swf.x; fi
elif [ ${1} = 0 ]; then
	mv a.swf .expected/a.swf && \
	mv a.swf.log .expected && \
	base64 a.swf.x > .expected/a.swf.x.txt
else
	smart_diff .expected/a.swf a.swf && \
	diff .expected/a.swf.log a.swf.log && \
	base64 -d .expected/a.swf.x.txt > .expected/a.swf.x && smart_diff .expected/a.swf.x a.swf.x
fi
